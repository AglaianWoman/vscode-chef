{
	"name": "Chef",
	"description": "Chef language support and snippets for Visual Studio Code",
	"version": "0.1.2",
	"publisher": "Pendrica",
	"icon": "images/chef-logo.svg",
	"author": {
		"name": "Stuart Preston (stuart@pendrica.com)"
	},
	"displayName": "Chef Extension for Visual Studio Code",
	"engines": {
		"vscode": "0.10.x"
	},
	"categories": [
		"Languages",
		"Snippets"
	],
	"activationEvents": [
		"onCommand:extension.rubocop"
	],
	"main": "./out/extension",
	"contributes": {
		"languages": [{
			"id": "ruby",
			"aliases": ["Ruby", "Ruby"],
			"extensions": ["chefignore", "Berksfile", "Policyfile"]
		}],
		"grammars": [{
			"language": "ruby",
			"scopeName": "source.ruby.chef",
			"path": "./syntaxes/chef.plist"
		}],
		"snippets": [{
				"language": "ruby",
				"path": "./snippets/snippets.json"
		}]
		// ,
		// "commands": [{
		// 	"command": "extension.rubocop",
		// 	"title": "Rubocop"
		// }]
	},
	"scripts": {
		"vscode:prepublish": "node ./node_modules/vscode/bin/compile",
		"compile": "node ./node_modules/vscode/bin/compile -watch -p ./"
	},
	"devDependencies": {
		"vscode": "0.10.x"
	},
	"extensionDependencies": [
        "vscode.ruby"
  ]
}
